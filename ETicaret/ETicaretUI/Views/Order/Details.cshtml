@model ETicaretData.Entities.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Model.Total.ToString("c")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddressTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.orderState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.orderState)
        </dd>

        <dt class="col-sm-2">
            Products
        </dt>
        @{ int index = 0; }
        @foreach (var item in Model.OrderLines)
        {
            <dd class="col-sm-10 @(index == 0 ? "" : "offset-sm-2")">
                @(item.Product.Name) x @(item.Quantity) | @(item.Price)
            </dd>
            index++;
        }
    </dl>
</div>
<div>
    @if (Model.orderState == ETicaretData.ViewModels.EnumOrderState.Canceled)
    {
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    }
    else
    {
        <a class="btn btn-info" asp-action="Approve" asp-route-id="@Model?.Id">Approve</a> @:|
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    }
</div>

